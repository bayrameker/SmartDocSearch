# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/docusearch

# Port Settings
FRONTEND_PORT=5000
SERVER_PORT=8000

# Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=1d
SESSION_SECRET=your-session-secret-change-this-in-production

# OpenAI Settings (required for AI functions)
OPENAI_API_KEY=your-openai-api-key
